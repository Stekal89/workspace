@model onlineKredit.web.Models.KreditRahmenModel

@{
    ViewBag.Title = "KreditRahmen";
}

<div id="content" style="margin-top: 20px">
    <h2 class="form-heading">Ihr gewünschter Kreditrahmen</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row" style="margin-top: 20px">
            <div class="col-lg-offset-4 col-md-offset-4 col-lg-6 col-md-6">
                Bitte wählen Sie Ihren gewünschten Kreditbetrag und die geplante Laufzeit in Monaten. Bestätigen Sie im Anschluss ihre Auswahl durch die Schaltfläche &quot;Bestätigen&quot;.
            </div>
        </div>
                <br />

        <section class="input-fromular">
            <div class="form-horizontal">
                
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                        @Html.LabelFor(model => model.GewuenschterBetrag, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-lg-6 col-md-6">
                        @Html.EditorFor(model => model.GewuenschterBetrag, new { htmlAttributes = new { @class = "form-control", id = "gewuenschterBetrag" } })
                        @Html.ValidationMessageFor(model => model.GewuenschterBetrag, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                        @Html.LabelFor(model => model.Laufzeit, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-lg-6 col-md-6">
                        @Html.EditorFor(model => model.Laufzeit, new { htmlAttributes = new { @class = "form-control", id = "laufzeit" } })
                        @Html.ValidationMessageFor(model => model.Laufzeit, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-offset-4 col-md-offset-4 col-lg-3 col-md-3">
                        <input type="submit" value="Bestätigen" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </section>
    }

</div>


@section Scripts {

    <script type="text/javascript">
        //http://ionden.com/a/plugins/ion.rangeSlider/en.html
        $(document).ready(function () {
            $("#gewuenschterBetrag").ionRangeSlider({
                min: 1000,
                max: 100000,
                from: @Model.GewuenschterBetrag,
                grid: true,
                prefix: "€ ",
                step: 1000
            });
            $("#laufzeit").ionRangeSlider({
                min: 1,
                max: 120,
                from: @Model.Laufzeit,
                grid: true,
                prefix: "Monate ",
                step: 1
            });
        });
    </script>
}