@model bool?
@{
    ViewBag.Title = "BewilligungsAusgabe";
}

@if (Model.Value)
{
    <div id="content" style="margin-top: 20px">
        <h2>Kredit-Freigabe</h2>
        <h3>Ihr Kredit kann bewilligt werden!</h3>
        <div class="form-horizontal input-fromular">
            <div class="row" style="margin-top: 20px">
                <div class="col-lg-offset-4 col-md-offset-4 col-lg-6 col-md-6">
                    
                    <br /><br />
                    Ihr Auftrag wurde erfolgreich überprüft. <b>Sie sind Kreditwürdig.</b>
                    Es wird sich innerhalb der nächsten 10 Tage ein Mitarbeiter mit ihnen in
                    Verbindung setzen.

                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-offset-2 col-sm-5">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary ">Zurück</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div id="content" style="margin-top: 20px">
        <h2>Kredit-Absage</h2>
        <h3>Ihr Kredit kann leider <strong>nicht</strong> bewilligt werden!</h3>
        <div class="form-horizontal input-fromular">
            <div class="row" style="margin-top: 20px">
                <div class="col-lg-offset-4 col-md-offset-4 col-lg-6 col-md-6">
                    Ihr Auftrag wurde erfolgreich überprüft. <b>Sie sind leider Kreditwürdig.</b>
                    <br /><br />
                    Ihre angegebenen Daten erlauben es uns leider nicht, Ihnen ein passendes Kredit-Angebot zu unterbreiten. Natürlich stehen wir Ihnen gerne zu einem persönlichen Beratungsgespräch in unserer nächsten Deutsche Bank Filiale zur Verfügung!
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-offset-2 col-sm-5">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary ">Zurück</a>
                </div>
            </div>
        </div>
    </div>
}
